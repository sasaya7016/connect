=render "users/modules/sidebar"
=render "users/modules/header"
=render "users/modules/sub_bar"


.user-edit

  #account-page.account-page
    .account-page__inner.clearfix
      .account-page__inner--left.account-page__header
        %h5 アカウントの編集
        -# = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
        -# = link_to "トップページに戻る", :back, class: 'btn'
      .account-page__inner--right.user-form
        = form_for(current_user) do |f|
          .field
            .field-label
              = f.label :nickname
              %span 必須
            .field-input
              = f.text_field :nickname, autofocus: true
          .field
            .field-label
              = f.label :email
              %span 必須
            .field-input
              = f.email_field :email, autofocus: true

          .field
            .field-label
              = f.label :name
            .field-input
              = f.text_field :name
          .field
            .field-label
              = f.label :profile
            .field-input
              = f.text_area :profile
          .field
            .field-label
              = f.label :icon_image
            .field-input
              = f.file_field :icon_image

          .actions
            = f.submit "Update", class: 'btn'