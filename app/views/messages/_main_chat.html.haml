= render "tweets/modules/side_bar"
= render 'messages/chat_header'

.chat-title
  .chat-title__explanation
    %h1 Group-chat
  .header-a
    .header-a__group
      %h2.header__group__name
        = @group.name
      %p.header__group__member 
        Member :
        - @group.users.each do |user|
          = user.name
    %p.header__group-edit
      = link_to 'Edit', edit_group_path(@group) 
      = link_to new_group_path do
        = icon('fas', 'edit', class: 'icon')
  

.chat-main
  


  .message
    = render @messages
  


  .forms
    = form_for [@group, @message] do |f|
      .form
        = f.text_field :content, class: 'form__text',    placeholder: 'type a message'
        .input
          = f.label :image, class: 'input__file' do
            = icon('fas', 'image', class: 'image')
            = f.file_field :image, class: 'file'
      = f.submit 'Send', class: 'send-btn'