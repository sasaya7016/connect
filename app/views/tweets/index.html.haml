= render "tweets/modules/sidebar"
.review
  .review__tweets
    = link_to "投稿",new_tweet_path
    %h1 投稿
    %p お店の商品や利用していただいた方へ
    %p ご要望・ご指摘がございましたら、ご記入ください。

    .review-lists
      
      -@tweets.each do |tweet|
        .review-lists__list
          .day-name
            .date-time
              = tweet.created_at.strftime('%Y/%m/%d %H:%M')
            .image
              = image_tag tweet.image.url
            .user-name
              = tweet.name
            .select-list
              = link_to '削除', "/tweets/#{tweet.id}", method: :delete
              = link_to '編集', "/tweets/#{tweet.id}/edit", method: :get
                   
            .text
              = simple_format tweet.text
           
            
