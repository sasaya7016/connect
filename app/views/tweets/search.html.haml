= render "tweets/modules/header"
= render "tweets/modules/side_bar"
= render "tweets/modules/sub_bar"



.tweet-title
  .tweet-title__explanation
    %h1 検索結果

.tweet-lists
  -@searches.each do |tweet|
    .tweet-lists__list
      .user-tweet
        .user-tweet__image
          -if current_user.icon_image.url.nil?
          -else
            =link_to image_tag(current_user.icon_image.url)
        .user-tweet__nickname
          = tweet.user.nickname
      .user-text
        =link_to tweet_path(tweet.id) do
          .user-text__first
            .date-time
              = tweet.created_at.strftime('%Y/%m/%d')
            .tweet-link
              = link_to '詳細', "/tweets/#{tweet.id}", method: :get 
              -if user_signed_in? && current_user.id == tweet.user_id
                = link_to '編集', "/tweets/#{tweet.id}/edit", method: :get
                = link_to '削除', "/tweets/#{tweet.id}", method: :delete 
        
        .user-text__second
          .user_name
            = simple_format tweet.text

        .user-text__third
          .kuchikomi
            ■
          .like
            ♡
          
     
  = paginate(@tweets)
           